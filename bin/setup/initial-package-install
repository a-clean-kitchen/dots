#!/bin/sh
## Serves the purpose of keeping track of used packages
## as well as installing them

## This script is meant to be run as root

### VARIABLES ###

packages=(
    'xorg-xwayland', 'xorg-xlsclients', 'xorg-xinit',
    'polkit',
    'qt5-wayland', 'glfw-wayland',
    'docker',
    'foot', 'git', 'emacs',
    'neovim', 'tldr',
    'waybar-hyprland-git',
    'rofi', 'dunst',
    'hyprland', 'hyprpaper',
    'ly', 'qutebrowser',
    'nerd-fonts-complete',
    'scientifica-font',
    'terminus-font-ttf',
    'pulseaudio',
    'tmux',
    'wlroots'
)

### Install yay for AUR's ###
install_paru() {
    echo "Installing yay"
    sudo pacman -S --needed base-devel
    git clone https://aur.archlinux.org/paru.git
    cd paru
    makepkg -si
    cd ..
    rm -rf paru
}

### Install packages ###
install_packages() {
    echo "Installing packages"
    echo ${packages[@]}
    paru -S --needed ${packages[@]//,/}
}

install_paru
install_packages
